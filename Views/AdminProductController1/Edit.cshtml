@model Product
@{
    ViewData["tittle"] = "Edit Product";

}
<div class="card border-2">
    <div class="card-header text-white" style="background-color: darkcyan;">
        <h3 class="p-2 text-center">Edit Product</h3>
    </div>

    <div class="card-body">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <!-- Keep Product ID -->
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Product Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @* <!-- Show existing image if available -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-3">
                    <label class="form-label">Current Image:</label><br />
                    <img src="~/@Model.ImagePath" width="150" height="150" style="border:1px solid #ccc;" />
                </div>
            } *@

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Upload New Image (Optional)</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div>


            </div>

            <button type="submit" class="btn btn-success">Update Product</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}